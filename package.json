{
  "name": "react-training",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.1.1"
  },
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"src/**/*.{js,json,css}\"",
    "start": "react-scripts start",
    "test": "react-scripts test --env=jsdom"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1"
  },
  "lint-staged": {
    "src/**/*.json": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.css": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
